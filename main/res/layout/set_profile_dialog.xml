<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TimePicker
        android:layout_weight="1"
        android:id="@+id/setProfileDialogTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TimePicker>


    <LinearLayout
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/airDialogTimetableCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="air "
            android:checked="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="17dp"
            android:text="check this to enable the saving mode for air"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/tempDialogTimetableCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="temp "
            android:checked="true"
            android:layout_marginVertical="5dp"
            />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin = "5dp"
        android:text="check this to enable the saving mode for temp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/lightDialogTimetableCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="light "
            android:checked="true"
            android:layout_marginVertical="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingLeft="7dp"
            android:text="check this to enable the saving mode for light"/>
    </LinearLayout>



</LinearLayout>